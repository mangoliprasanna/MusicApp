<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/listImageLeft"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_listImage" />

    <ImageView
        android:id="@+id/listImageRight"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_listImage" />

    <TextView
        android:id="@+id/listTitle"
        android:layout_toRightOf="@id/listImageLeft"
        android:layout_marginLeft="@dimen/element_between"
        android:layout_width="wrap_content"
        android:textSize="@dimen/base_text_size_header"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/listTitle"
        android:id="@+id/listSubTitle"
        android:layout_marginLeft="@dimen/element_between"
        android:layout_toRightOf="@id/listImageLeft"
        android:textSize="@dimen/base_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>